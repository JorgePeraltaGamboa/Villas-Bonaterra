@model VillasBonaterra.Models.Usuario

@{
    ViewBag.Title = "Editar Propietario";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<title>@ViewBag.Title</title>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index", "Users")">Propietarios</a>
    </li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>
<h1>@ViewBag.Title</h1>

<form id="UsersUpdateForm" name="UsersUpdateForm" enctype="multipart/form-data">
    <div class="form-group">
        <input value="@Model.id" type="hidden" id="Id" required>
        <label for="InputName">Nombre</label>
        <input value="@Model.nombre" type="text" class="form-control" id="Name" aria-describedby="Name" placeholder="Escriba aqui el nombre" required>
    </div>
    <div class="form-group">
        <label for="MidleName">Primer Apellido</label>
        <input value="@Model.apellido1" type="text" class="form-control" id="MidleName" placeholder="Escriba aqui el primer apellido" required>
    </div>
    <div class="form-group">
        <label for="LastName">Segunto Apellido</label>
        <input value="@Model.apellido2" type="text" class="form-control" id="LastName" placeholder="Escriba aqui el segunto apellido" required>
    </div>
    <div class="form-group">
        <label for="Correo">Correo Electrónico</label>
        <input value="@Model.email" type="email" class="form-control" id="Correo" placeholder="Escriba aqui su Correo Electrónico" required>
    </div>
    <div class="form-group">
        <label for="Telefono">Teléfono</label>
        <input value="@Model.telefono" type="tel" class="form-control" id="Telefono" placeholder="Escriba aqui su Teléfono" required>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Guardar</button>
</form>
@section js{
    @Scripts.Render("~/Assets/Users")
}

