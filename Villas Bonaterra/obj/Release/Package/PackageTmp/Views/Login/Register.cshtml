@using System.Web.Optimization
@{
    ViewBag.Title = "Registro";
}
<!DOCTYPE html>
<html lang="es-mx">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Assets/css")
</head>

<body class="bg-dark">
    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header logo"></div>
            <form name="RegisterFrom" id="RegisterFrom">
                <div class="card-body">
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="InputName">Nombre *</label>
                                <input class="form-control" id="InputName" name="InputName" type="text" aria-describedby="nameHelp" placeholder="Escribe tu nombre" onfocus="HideError()" required>
                            </div>
                            <div class="col-md-6">
                                <label for="InputLastName">Apellidos *</label>
                                <input class="form-control" id="InputLastName" name="InputLastName" type="text" aria-describedby="nameHelp" placeholder="Escribe tus apellidos" onfocus="HideError()" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="InputEmail">Correo *</label>
                        <input class="form-control" id="InputEmail" name="InputEmail" type="email" aria-describedby="emailHelp" placeholder="Tu correo electronico" onfocus="HideError()" required>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="InputPassword1">Contraseña *</label>
                                <input class="form-control" id="InputPassword" name="InputPassword" type="password" placeholder="Contraseña" onfocus="HideError()" required>
                            </div>
                            <div class="col-md-6">
                                <label for="ConfirmPassword">Confirmar contraseña *</label>
                                <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" type="password" placeholder="Confirmar contraseña" onfocus="HideError()" required>
                            </div>
                        </div>
                    </div>
                    <div class="alert alert-danger" id="error" style="display:none;">
                        <strong id="typemessage"></strong> <span id="message"></span>
                    </div>
                    <input type="submit" id="submit" style="display:none;" />
                    <a class="btn btn-primary btn-block" style="color:white;" onclick="RegisterUserClick()">Registrarme </a>
                    <div class="text-center">
                        <a class="d-block small mt-3" href="@Url.Action("Index","Login")">Iniciar Sesion</a>
                        <a class="d-block small" href="@Url.Action("Recovery","Login")">Recuperar Contraseña?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modalLoading"><!-- Place at bottom of page --></div>
</body>
@Scripts.Render("~/Assets/js")
@Scripts.Render("~/Assets/Login")
</html>